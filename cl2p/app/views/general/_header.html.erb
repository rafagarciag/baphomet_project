<div id="header">
	<div id="header-content">
		<div id="logo" >
			<h1><a href="/" class="links" >cl2p.net</a></h1>
		</div>
		<ul id="header-links">
			<% if !user_signed_in? %>
				<li class="header-options"><%= link_to "Sign up", new_user_registration_path, :class => 'links' %></li>
				<li class="header-options"><%= link_to "Sign in", new_user_session_path, :class => 'links' %></li>
				<li class="header-options"><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => 'links'  %></li>
				<li class="header-options"><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class => 'links'  %></li>
				<li class="header-options"><%= link_to "Sign in with Github", user_omniauth_authorize_path(:github), :class => 'links'  %></li>
			<% else %>
				<li class="header-options"> Hello <%= current_user.username %> </li>
				<li id="sign-out"> <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'links' %> </li>
			<% end %>
		</ul>
	</div>
</div>
