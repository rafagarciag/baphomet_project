<% if user_signed_in? %>
	<% userId = current_user.id %>
<% else %>
	<% userId = nil %>
<% end %>

<% if userId == @pastebin.user_id || @pastebin.editable %>
	<%= form_for @pastebin, :as => :pastebin, :url => { :controller => 'pastebin', :action => 'update', :id => @pastebin.id, :userId => userId }, :method => :post do |p| %>
		<% if userId == @pastebin.user_id || @pastebin.visible %>
			<div class="toolbar" >
				<br />
				<a href="https://twitter.com/share" class="twitter-share-button" data-text="Check out my 8copy!" data-hashtags="8copy">Tweet</a>
				<script>
					!function(d,s,id){
						var js,fjs=d.getElementsByTagName(s)[0];
						if(!d.getElementById(id)){
							js=d.createElement(s);
							js.id=id;
							js.src="//platform.twitter.com/widgets.js";
							fjs.parentNode.insertBefore(js,fjs);
						}
					}(document,"script","twitter-wjs");
				</script>
				<br />
				<br />
				<b>Color scheme:</b>
				<br />
				<select>
					<option value="clasic">Classic cl2p</option>
					<option value="blue">Intense blue</option>
					<option value="red">Furious red</option>
					<option value="psychedelic">Psychedelic</option>
					<option value="bnw">b&w</option>
				</select>
				<% if user_signed_in? %>
					<br />
					<br />
					<%= p.check_box :visible %> <%= p.label :visible, "Visible to others" %>
					<br />
					<br />
					<%= p.check_box :editable %> <%= p.label :editable, "Editable by others" %>
					<br />
					<br />
				<% end %>
				<br />
				<%= p.submit %>
			</div>
			<%= p.text_area :content, { :id => "pastebinText", :wrap => "off", :style => "visibility:hidden" }%> 
		<% else %>
			<b>You are unable to see this pastebin.</b>
		<% end %>
	<% end %>
<% else %>
	<textarea id="disabledPastebin" style="visibility:hidden"><%= @pastebin.content %></textarea>
<% end %>
